# Main Environment Configuration
# This file serves as the default configuration
# Override these settings in .env.local for development or .env.production for production

# Set to 'true' to use production API, 'false' to use local API
REACT_APP_USE_PRODUCTION=true

# Production API URL (Chambers API)
REACT_APP_PROD_API_URL=https://chambersapi.logicera.in/api

# Local API URL (Laravel backend on localhost)
REACT_APP_LOCAL_API_URL=http://127.0.0.1:8000/api

# Legacy variable (kept for backward compatibility)
REACT_APP_API_URL=https://chambersapi.logicera.in/api

# Frontend domain for CORS
REACT_APP_FRONTEND_URL=https://intellicrafts.in

# API domain for cookies
REACT_APP_API_DOMAIN=chambersapi.logicera.in
